{
  "name": "mock-psp-server",
  "version": "1.0.0",
  "description": "Mock PSP server using JSON Server",
  "main": "server.js",
  "scripts": {
    "start": "json-server --watch db.json --port 3001 --routes routes.json --middlewares middleware.js",
    "dev": "nodemon --exec \"json-server --watch db.json --port 3001 --routes routes.json --middlewares middleware.js\""
  },
  "dependencies": {
    "json-server": "^0.17.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}